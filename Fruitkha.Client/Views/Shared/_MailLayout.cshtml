<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body style="margin: 0; padding: 0;">
    <table align="center" border="1" cellpadding="0" cellspacing="0" width="700" height="500" style="border-collapse: collapse">
        <tr>
            <td align="center" bgcolor="#35374D" style="padding: 10px 0 10px 0">
                <h1 style="color: white">Thanks for using our service!</h1>
            </td>
        </tr>
        <tr>
            <td bgcolor="#6E67A9" style="padding: 40px 0 30px 0;" align="center">
                <h1 style="color: white;">Hello, Dear @ViewData["UserName"]!</h1>
                @RenderBody()
            </td>
        </tr>
        <tr>
            <td bgcolor="#2E445F" style="padding: 5px 30px 5px 30px">
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td>
                            <h2 style="color: white;">&reg; Digital shop Velar @DateTime.Now.Year<br /></h2>
                        </td>
                        <td align="center">
                            <a href=@ViewData["ClientUrl"]>
                                <h2>Velar</h2>
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
